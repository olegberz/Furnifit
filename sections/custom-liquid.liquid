<style>
  .grid {
    display: flex;
    justify-content: center; /* Центрирует все элементы */
    flex-wrap: wrap;
    gap: 15px;
    width: 100%;
    padding: 0 15px; /* Отступы с обеих сторон */
    box-sizing: border-box;
  }

  .grid-item {
    width: 450px;  /* Ширина видео */
    height: 640px; /* Высота видео */
    margin-bottom: 10px;
    padding: 10px;
    box-sizing: border-box;
  }

  .grid-item video {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    border-radius: 8px;
  }
</style>

<script src="https://unpkg.com/masonry-layout@4/dist/masonry.pkgd.js"></script>

<!-- Подключение AOS (Animate on Scroll) JS -->
<script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>

<script>
  // Инициализация AOS
  AOS.init({
    offset: 200,  // Начинается анимация, когда элемент будет на 200px от экрана
    delay: 0,  // Задержка для каждого элемента
    duration: 1000,  // Длительность анимации
    easing: 'ease-out',  // Плавность анимации
    once: true,  // Анимация будет выполняться один раз
  });

  // Для видео, чтобы они начинали воспроизводиться при наведении (для десктопа)
  document.querySelectorAll('.grid-item video').forEach(video => {
    video.addEventListener('mouseenter', () => {
      video.play();
    });
    video.addEventListener('mouseleave', () => {
      video.pause();
      video.currentTime = 0;
    });

    // Для мобильных устройств
    video.addEventListener('touchstart', () => {
      if (video.paused) {
        video.play();
      } else {
        video.pause();
        video.currentTime = 0;
      }
    });
  });
</script>


