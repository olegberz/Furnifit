<style>
  .grid {
    display: flex;
    justify-content: center; /* Центрирует все элементы */
    flex-wrap: wrap;
    gap: 15px;
    width: 100%;
    padding: 0 15px; /* Отступы с обеих сторон */
    box-sizing: border-box;
  }

  .grid-item {
    width: 450px;  /* Ширина видео */
    height: 640px; /* Высота видео */
    margin-bottom: 10px;
    padding: 10px;
    box-sizing: border-box;
    opacity: 0; /* Элементы изначально скрыты */
    transform: translateY(50px); /* Элементы изначально немного ниже */
    transition: opacity 1s ease, transform 1s ease; /* Плавный переход */
  }

  .grid-item.show {
    opacity: 1; /* Когда элемент становится видимым, он становится видимым */
    transform: translateY(0); /* Элемент поднимается */
  }

  .grid-item video {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    border-radius: 8px;
  }
</style>

<script src="https://unpkg.com/masonry-layout@4/dist/masonry.pkgd.js"></script>

<script>
  // Создаем новый Intersection Observer
  const observer = new IntersectionObserver((entries, observer) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        // Добавляем класс "show", чтобы анимировать элементы
        entry.target.classList.add('show');
        // Останавливаем наблюдение за этим элементом
        observer.unobserve(entry.target);
      }
    });
  }, { threshold: 0.1 }); // Элемент будет отслеживаться, когда 10% будет видно на экране

  // Применяем observer ко всем видео
  document.querySelectorAll('.fade-in').forEach(video => {
    observer.observe(video);
  });

  // Для видео, чтобы они начинали воспроизводиться при наведении (для десктопа)
  document.querySelectorAll('.grid-item video').forEach(video => {
    video.addEventListener('mouseenter', () => {
      video.play();
    });
    video.addEventListener('mouseleave', () => {
      video.pause();
      video.currentTime = 0;
    });

    // Для мобильных устройств
    video.addEventListener('touchstart', () => {
      if (video.paused) {
        video.play();
      } else {
        video.pause();
        video.currentTime = 0;
      }
    });
  });
</script>

