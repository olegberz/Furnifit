<style>
  .grid {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 15px;
    width: 100%;
    padding: 0 15px;
    box-sizing: border-box;
  }

  .grid-item {
    width: 450px;
    height: 640px;
    margin-bottom: 10px;
    padding: 10px;
    box-sizing: border-box;
    overflow: hidden;
    position: relative;
  }

  .grid-item video {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    border-radius: 8px;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .grid-item:hover video {
    transform: scale(0.95) translateY(-10px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
  }

  .grid-item video.active {
    transition: transform 0.3s ease;
  }
</style>

<script src="https://unpkg.com/masonry-layout@4/dist/masonry.pkgd.js"></script>

<script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>

<script>
  AOS.init({
    offset: 200, 
    delay: 0, 
    duration: 1000,  
    easing: 'ease-out', 
    once: true, 
  });

  document.querySelectorAll('.grid-item video').forEach(video => {
    video.addEventListener('mouseenter', () => {
      video.play();
    });
    video.addEventListener('mouseleave', () => {
      video.pause();
      video.currentTime = 0;
    });

    video.addEventListener('touchstart', () => {
      if (video.paused) {
        video.play();
      } else {
        video.pause();
        video.currentTime = 0;
      }
    });

    video.addEventListener('mousemove', (e) => {
      const bounds = video.getBoundingClientRect();
      const x = e.clientX - bounds.left;
      const y = e.clientY - bounds.top;

      const centerX = bounds.width / 2;
      const centerY = bounds.height / 2;

      const angleX = (centerX - x) / centerX * 20;  // угол наклона по оси X
      const angleY = (centerY - y) / centerY * 20;  // угол наклона по оси Y

      video.style.transform = `rotateX(${angleY}deg) rotateY(${angleX}deg)`;
    });

    video.addEventListener('mouseleave', () => {
      video.style.transform = 'rotateX(0) rotateY(0)';
    });
  });

  document.addEventListener('DOMContentLoaded', function() {
    var grid = document.querySelector('.grid');
    var masonry = new Masonry(grid, {
      itemSelector: '.grid-item',
      columnWidth: '.grid-sizer',
      percentPosition: true,
      transitionDuration: '0.5s'
    });
  });
</script>



