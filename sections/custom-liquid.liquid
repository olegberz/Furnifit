<!-- –ü–æ–¥–∫–ª—é—á–µ–Ω–∏–µ AOS (Animate on Scroll) JS -->
<script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>

<script>
AOS.init({
  offset: 200,
  delay: 0,
  duration: 1000,
  easing: 'ease-out',
  once: true,
});

document.querySelectorAll('.grid-item video').forEach(video => {
  video.addEventListener('mouseenter', () => {
    video.play();
  });
  
  video.addEventListener('mouseleave', () => {
    video.pause();
    video.currentTime = 0;
    video.style.transform = 'perspective(500px) rotateX(0deg) rotateY(0deg)';
  });

  video.addEventListener('mousemove', (e) => {
    const videoRect = video.getBoundingClientRect();
    const videoCenterX = videoRect.left + videoRect.width / 2;
    const videoCenterY = videoRect.top + videoRect.height / 2;
    
    const offsetX = (e.clientX - videoCenterX) / videoRect.width;
    const offsetY = (e.clientY - videoCenterY) / videoRect.height;
    
    const rotateX = offsetY * 5;  
    const rotateY = -offsetX * 5; 

    video.style.transform = `perspective(500px) rotateX(${rotateX}deg) rotateY(${rotateY}deg)`;
  });
});
</script>


